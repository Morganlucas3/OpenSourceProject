{
  "name": "ChatGPT Extension",
  "description": "Uses the ChatGPT API to provide assistance",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["activeTab", "storage"],
  "content_scripts":[
    {
      "matches":[
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "backgroud":{
    "scripts": ["popup.js"]
  },
  "browser_action": {
    "default_icon": "nutshell.png",
    "default_title": "ChatGPT Extension",
    "default_popup": "popup.html"
  }
}
